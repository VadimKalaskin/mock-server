generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Endpoint {
    id           String   @id @default(uuid())
    method       String
    path         String   @unique(map: "endpoint_method_path") // уникальная комбинация с method
    responseBody Json
    statusCode   Int      @default(200)
    delay        Int?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@unique([method, path], map: "uniq_endpoint_method_path")
    @@index([method, path], map: "idx_endpoint_method_path")
}
